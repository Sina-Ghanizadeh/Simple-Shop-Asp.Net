@model Order
@{
    ViewData["Title"] = "Cart";
}

@if (Model != null)
{

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th> Image </th>
                <th>Product Name</th>
                <th>Count</th>
                <th>Price</th>
                <th>Sum Price</th>
                

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.OrderDetail)
            {
                <tr>
                    <td>
                        <img src="/images/@item.Product.PicPath.Pic1Path" alt="Alternate Text" class="img-thumbnail" height="160" width="160" />
                    </td>
                    <td>@item.Product.Title</td>
                    <td>@item.Count</td>

                    <td>@(item.Price)</td>
                    <td>@(item.Price *item.Count)</td>

                   



                </tr>

            }
        </tbody>
    </table>
    <div class="row">
        <h5 class="col-md-10">Sum : @Model.OrderDetail.Sum(s => s.Count * s.Price)</h5>
        <a asp-action="OrderList" class="btn btn-secondary">Back</a>
    </div>

}
else
{
    <div class="alert alert-danger">
        Your Cart Is Empty
    </div>
}