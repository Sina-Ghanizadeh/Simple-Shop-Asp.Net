@model Simple_Shop.Models.ViewModels.DetailsViewModel

@{
    ViewData["Title"] =   Model.Product.Title;
}
<div>
    <h1 class="display-5"> @Model.Product.Title</h1>
    <hr />
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/@Model.Product.PicPath.Pic1Path" alt="@Model.Product.Title">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/@Model.Product.PicPath.Pic2Path" alt="@Model.Product.Title">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/@Model.Product.PicPath.Pic3Path" alt="@Model.Product.Title">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/@Model.Product.PicPath.Pic4Path" alt="@Model.Product.Title">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/@Model.Product.PicPath.Pic5Path" alt="@Model.Product.Title">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/@Model.Product.PicPath.Pic6Path" alt="@Model.Product.Title">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />
    <br />
    <br />
    <br />
    <h6>
        <p>
            Likes ❤  :  @Model.Product.Likes
        </p>



    </h6>
    <a asp-action="Like" asp-controller="Home" asp-route-id=@Model.Product.Id class="btn btn-outline-danger" > Like 👍 </a>
    <br />

    <p class="py-5 text-justify">@Model.Product.Description</p>

    <p>Price : @Model.Product.Price</p>
    @if (Model.Product.DiscountPrice !=0)
    {
        <p>Price with DisCount : @Model.Product.DiscountPrice</p>
    }



    <div>
        <a asp-controller="Home" asp-action="AddtoCart" asp-route-id="@Model.Product.Id"
           class="btn btn-outline-primary">
            Add To Cart
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Back To List</a>
    </div>
</div>



